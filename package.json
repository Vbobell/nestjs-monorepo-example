{
  "name": "@vbobel/nestjs-monorepo-example",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:postgres-and-api-example && npm run build:gateway",
    "build:gateway": "nest build gateway",
    "build:postgres-and-api-example": "nest build postgres-and-api-example",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "prettier": "prettier --write .",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=local concurrently 'npm run start:dev:postgres-and-api-example' 'npm run start:dev:gateway'",
    "start:dev:gateway": "NODE_ENV=local nest start gateway --watch",
    "start:dev:postgres-and-api-example": "NODE_ENV=local nest start postgres-and-api-example --watch",
    "start:debug": "nest start --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./libs/test-tools/jest-e2e.json",
    "test:integration": "jest --config ./libs/test-tools/jest-integration.json",
    "db:typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:typeorm:migration:run": "npm run db:typeorm -- -d ./apps/$PROJECT/external/database/migration.ts migration:run",
    "db:typeorm:migration:generate": "npm run db:typeorm -- -d ./apps/$PROJECT/external/database/migration.ts migration:generate ./apps/$PROJECT/external/database/migrations/migration",
    "db:typeorm:seed:run": "npm run db:typeorm -- -d ./apps/$PROJECT/external/database/seed.ts migration:run",
    "db:typeorm:seed:create": "npm run db:typeorm migration:create ./apps/$PROJECT/external/database/seeds/seed"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^9.4.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/typeorm": "^10.0.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.1",
    "http-proxy-middleware": "^2.0.6",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/express": "^4.17.21",
    "@types/jest": "28.1.8",
    "@types/node": "^16.18.75",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "28.1.3",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.4",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  }
}